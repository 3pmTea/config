git_branch() { git branch 2>/dev/null | sed -e '/^[^*]/d' -e 's/*\(.*\)/\1/';}
TIME='\[\e[01;91m\][\t] \[\e[00m\]'
LOCATION='\[\e[01;34m\]\w\[\e[00m\]'
BRANCH='\[\e[00;95m\]$(git_branch)\[\e[00m\] '
ARROW='\[\e[00;33m\]'$'\xe2\x96\xb6''\[\e[00m\]'
PS1=$TIME$BRANCH$LOCATION" "$ARROW""

alias ..="cd .."
alias ...="cd .. && cd .."
alias ....="cd .. && cd .. && cd .."
alias .....="cd .. && cd .. && cd .. && cd .."

